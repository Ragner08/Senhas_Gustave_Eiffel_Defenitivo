@model RegisterViewModel
@{
    ViewData["Title"] = "Criar Utilizador";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i>Criar Novo Utilizador
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="Nome" class="form-label">
                                Nome Completo <span class="required">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                            </div>
                            <span asp-validation-for="Nome" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                Email <span class="required">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="email@exemplo.pt" />
                            </div>
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                Palavra-passe <span class="required">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Digite a palavra-passe" />
                            </div>
                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                            <small class="form-text">Mínimo de 6 caracteres, incluindo maiúsculas, minúsculas e números.</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                Confirmar Palavra-passe <span class="required">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirme a palavra-passe" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Role" class="form-label">
                                Tipo de Utilizador <span class="required">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                <select asp-for="Role" class="form-control">
                                    <option value="">-- Selecione o tipo --</option>
                                    @foreach (var role in ViewBag.Roles)
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="Role" class="invalid-feedback"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus me-2"></i>Criar Utilizador
                            </button>
                            <a asp-action="UserManagement" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
