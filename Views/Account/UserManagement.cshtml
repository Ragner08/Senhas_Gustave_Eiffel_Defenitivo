@model List<UserManagementViewModel>
@{
    ViewData["Title"] = "Gestão de Utilizadores";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-people me-2"></i>Gestão de Utilizadores
        </h2>
        <a asp-action="Register" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i>Criar Utilizador
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Escalão</th>
                            <th>Saldo</th>
                            <th>Data de Registo</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-person me-2 text-primary"></i>@user.Nome
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-info">@user.Role</span>
                                </td>
                                <td>@user.Escalao</td>
                                <td>
                                    <span class="fw-bold @(user.WalletBalance > 0 ? "text-success" : "text-muted")">
                                        @user.WalletBalance.ToString("C")
                                    </span>
                                </td>
                                <td>@user.DataRegisto.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning" title="Alterar Palavra-passe">
                                            <i class="bi bi-key"></i>
                                        </a>
                                        <a asp-controller="Wallet" asp-action="UserWallet" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-success" title="Ver Carteira">
                                            <i class="bi bi-wallet2"></i>
                                        </a>
                                        @if (user.Email != "admin@epge.pt")
                                        {
                                            <form asp-action="DeleteUser" method="post" class="d-inline"
                                                  onsubmit="return confirm('Tem certeza que deseja eliminar este utilizador?');">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Nota:</strong> O utilizador administrador principal não pode ser eliminado.
        </div>
    </div>
</div>
