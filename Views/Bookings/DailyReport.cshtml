@model DailyReportViewModel
@{
    ViewData["Title"] = "Relatório Diário";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-clipboard-data me-2"></i>Relatório Diário
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
    </div>

    <!-- Date Selection -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Selecionar Data:</label>
                    <input type="date" name="date" class="form-control" value="@Model.Data.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>Ver
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalEscalaoA</h3>
                    <p class="mb-0">Escalão A</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalEscalaoB</h3>
                    <p class="mb-0">Escalão B</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow bg-secondary text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalSemEscalao</h3>
                    <p class="mb-0">Sem Escalão</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalValor.ToString("C")</h3>
                    <p class="mb-0">Total Recebido</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Meal Info -->
    @if (Model.Meal != null)
    {
        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-utensils me-2"></i>Refeição do Dia
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (!string.IsNullOrEmpty(Model.Meal.Sopa))
                    {
                        <div class="col-md-3">
                            <div class="meal-info-card">
                                <i class="bi bi-cup-hot"></i>
                                <h6>Sopa</h6>
                                <p>@Model.Meal.Sopa</p>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Meal.PratoPrincipal))
                    {
                        <div class="col-md-3">
                            <div class="meal-info-card">
                                <i class="bi bi-egg-fried"></i>
                                <h6>Prato Principal</h6>
                                <p>@Model.Meal.PratoPrincipal</p>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Meal.Vegetariano))
                    {
                        <div class="col-md-3">
                            <div class="meal-info-card">
                                <i class="bi bi-flower1"></i>
                                <h6>Vegetariano</h6>
                                <p>@Model.Meal.Vegetariano</p>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Meal.Sobremesa))
                    {
                        <div class="col-md-3">
                            <div class="meal-info-card">
                                <i class="bi bi-cake"></i>
                                <h6>Sobremesa</h6>
                                <p>@Model.Meal.Sobremesa</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Bookings List -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list me-2"></i>Lista de Marcações (@Model.Bookings.Count)
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Bookings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Utilizador</th>
                                <th>Escalão</th>
                                <th>Valor</th>
                                <th>Hora da Marcação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.Bookings)
                            {
                                <tr>
                                    <td>@booking.Id</td>
                                    <td>
                                        <i class="bi bi-person me-1 text-primary"></i>
                                        @(booking.User?.Nome ?? "N/A")
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@booking.EscalaoUtilizado</span>
                                    </td>
                                    <td>@booking.ValorPago.ToString("C")</td>
                                    <td>@booking.DataRegisto.ToString("HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-2">Nenhuma marcação para este dia.</p>
                </div>
            }
        </div>
    </div>
</div>
