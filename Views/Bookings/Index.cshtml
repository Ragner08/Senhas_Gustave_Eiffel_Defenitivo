@model List<Booking>
@{
    ViewData["Title"] = "Minhas Senhas";
    var isAdmin = (bool)ViewBag.IsAdmin;
    var isFuncionario = (bool)ViewBag.IsFuncionario;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-ticket-perforated me-2"></i>@(isAdmin || isFuncionario ? "Todas as Senhas" : "Minhas Senhas")
        </h2>
        <a asp-controller="Calendar" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-calendar-plus me-2"></i>Marcar Nova Senha
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                @if (isAdmin || isFuncionario)
                                {
                                    <th>Utilizador</th>
                                }
                                <th>Data</th>
                                <th>Escalão</th>
                                <th>Valor Pago</th>
                                <th>Estado</th>
                                <th>Data de Marcação</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr class="@(booking.DataMarcacao < DateTime.Today ? "table-secondary" : "")">
                                    @if (isAdmin || isFuncionario)
                                    {
                                        <td>
                                            <i class="bi bi-person me-1 text-primary"></i>
                                            @(booking.User?.Nome ?? "N/A")
                                        </td>
                                    }
                                    <td>@booking.DataMarcacao.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">@booking.EscalaoUtilizado</span>
                                    </td>
                                    <td>@booking.ValorPago.ToString("C")</td>
                                    <td>
                                        @if (booking.Confirmado)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check me-1"></i>Confirmado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pendente</span>
                                        }
                                    </td>
                                    <td>@booking.DataRegisto.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-primary" title="Ver Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (booking.DataMarcacao > DateTime.Today)
                                            {
                                                @if (isAdmin || isFuncionario)
                                                {
                                                    <form asp-action="CancelBookingAdmin" method="post" class="d-inline"
                                                          onsubmit="return confirm('Tem certeza que deseja cancelar esta marcação? O valor será reembolsado.');">
                                                        <input type="hidden" name="id" value="@booking.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancelar">
                                                            <i class="bi bi-x-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form asp-controller="Calendar" asp-action="CancelBooking" method="post" class="d-inline"
                                                          onsubmit="return confirm('Tem certeza que deseja cancelar esta marcação? O valor será reembolsado.');">
                                                        <input type="hidden" name="bookingId" value="@booking.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancelar">
                                                            <i class="bi bi-x-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-ticket-perforated fs-1"></i>
                    <p class="mt-2">Nenhuma senha marcada.</p>
                    <a asp-controller="Calendar" asp-action="Index" class="btn btn-primary mt-2">
                        <i class="bi bi-calendar-plus me-2"></i>Marcar Agora
                    </a>
                </div>
            }
        </div>
    </div>

    @if (isFuncionario || isAdmin)
    {
        <div class="mt-4">
            <a asp-action="DailyReport" class="btn btn-info">
                <i class="bi bi-clipboard-data me-2"></i>Ver Relatório Diário
            </a>
        </div>
    }
</div>
