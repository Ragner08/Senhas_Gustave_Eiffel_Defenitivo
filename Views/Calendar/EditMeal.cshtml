@model Meal
@{
    ViewData["Title"] = "Editar Refeição";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>Editar Refeição
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditMeal" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Data" />

                        <div class="form-group">
                            <label asp-for="Data" class="form-label">Data</label>
                            <input type="text" class="form-control" value="@Model.Data.ToString("dddd, dd 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("pt-PT"))" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="Sopa" class="form-label">Sopa</label>
                            <input asp-for="Sopa" class="form-control" placeholder="Digite a sopa do dia" />
                            <span asp-validation-for="Sopa" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PratoPrincipal" class="form-label">Prato Principal</label>
                            <input asp-for="PratoPrincipal" class="form-control" placeholder="Digite o prato principal" />
                            <span asp-validation-for="PratoPrincipal" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Vegetariano" class="form-label">Opção Vegetariana</label>
                            <input asp-for="Vegetariano" class="form-control" placeholder="Digite a opção vegetariana" />
                            <span asp-validation-for="Vegetariano" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Sobremesa" class="form-label">Sobremesa</label>
                            <input asp-for="Sobremesa" class="form-control" placeholder="Digite a sobremesa" />
                            <span asp-validation-for="Sobremesa" class="invalid-feedback"></span>
                        </div>

                        <hr class="my-4" />

                        <h6 class="mb-3"><i class="bi bi-cash me-2"></i>Preços</h6>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PrecoEscalaoA" class="form-label">Escalão A</label>
                                    <input asp-for="PrecoEscalaoA" class="form-control" type="number" step="0.01" readonly />
                                    <small class="form-text">Preço fixo: 0,00 €</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PrecoEscalaoB" class="form-label">Escalão B</label>
                                    <input asp-for="PrecoEscalaoB" class="form-control" type="number" step="0.01" readonly />
                                    <small class="form-text">Preço fixo: 0,73 €</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PrecoSemEscalao" class="form-label">Sem Escalão</label>
                                    <input asp-for="PrecoSemEscalao" class="form-control" type="number" step="0.01" readonly />
                                    <small class="form-text">Preço fixo: 1,46 €</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Guardar Alterações
                            </button>
                            <a asp-action="DayDetails" asp-route-date="@Model.Data.ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
