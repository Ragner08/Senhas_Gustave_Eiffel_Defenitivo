@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Senhas de Almoço EPGE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Navbar Principal -->
        <nav class="navbar-main">
            <div class="navbar-container">
                <!-- Logo e Título -->
                <a class="navbar-brand" asp-controller="Calendar" asp-action="Index">
                    <img src="~/images/logo_branca.png" alt="EPGE" class="navbar-logo" />
                    <div class="brand-text">
                        <span class="brand-title">Senhas de Almoço</span>
                        <span class="brand-subtitle">EPGE</span>
                    </div>
                </a>

                <!-- Menu Central -->
                <div class="navbar-menu">
                    <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Calendar" ? "active" : "")" asp-controller="Calendar" asp-action="Index">
                        <i class="bi bi-calendar3"></i>
                        <span>Calendário</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Bookings" ? "active" : "")" asp-controller="Bookings" asp-action="Index">
                        <i class="bi bi-ticket-perforated"></i>
                        <span>Minhas Senhas</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Wallet" ? "active" : "")" asp-controller="Wallet" asp-action="Index">
                        <i class="bi bi-wallet2"></i>
                        <span>Carteira</span>
                    </a>
                    @if (User.IsInRole("Funcionário") || User.IsInRole("Admin"))
                    {
                        <a class="nav-item" asp-controller="Bookings" asp-action="DailyReport">
                            <i class="bi bi-utensils"></i>
                            <span>Refeições</span>
                        </a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="nav-dropdown">
                            <button class="nav-dropdown-toggle @(ViewContext.RouteData.Values["action"]?.ToString() == "UserManagement" || ViewContext.RouteData.Values["action"]?.ToString() == "AllTransactions" ? "active" : "")">
                                <i class="bi bi-gear"></i>
                                <span>Administração</span>
                                <i class="bi bi-chevron-down dropdown-arrow"></i>
                            </button>
                            <div class="nav-dropdown-menu">
                                <a asp-controller="Account" asp-action="UserManagement">
                                    <i class="bi bi-people"></i>
                                    <span>Gestão de Utilizadores</span>
                                </a>
                                <a asp-controller="Wallet" asp-action="AllTransactions">
                                    <i class="bi bi-cash-stack"></i>
                                    <span>Transações</span>
                                </a>
                            </div>
                        </div>
                    }
                    @if (User.IsInRole("Funcionário"))
                    {
                        <a class="nav-item" asp-controller="Wallet" asp-action="AllTransactions">
                            <i class="bi bi-cash-stack"></i>
                            <span>Transações</span>
                        </a>
                    }
                </div>

                <!-- Ações da Direita -->
                <div class="navbar-actions">
                    @{
                        var user = await UserManager.GetUserAsync(User);
                    }
                    <div class="wallet-pill">
                        <i class="bi bi-wallet2"></i>
                        <span>@(user?.WalletBalance.ToString("C") ?? "0,00 €")</span>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                        <button type="submit" class="btn-logout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Sair</span>
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    }

    <main class="main-content">
        @if (TempData["Success"] != null)
        {
            <div class="alert-container">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert-container">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-content">
            <span>&copy; @DateTime.Now.Year - Senhas de Almoço EPGE</span>
            <span>Gustave Eiffel</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
