@model List<WalletTransaction>
@{
    ViewData["Title"] = "Todas as Transações";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-cash-stack me-2"></i>Todas as Transações
        </h2>
        <a asp-controller="Account" asp-action="UserManagement" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Data</th>
                                <th>Utilizador</th>
                                <th>Tipo</th>
                                <th>Descrição</th>
                                <th class="text-end">Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <td>@transaction.DataTransacao.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <i class="bi bi-person me-1 text-primary"></i>
                                        @(transaction.User?.Nome ?? "N/A")
                                    </td>
                                    <td>
                                        @if (transaction.Tipo == "Carregamento")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-arrow-down me-1"></i>@transaction.Tipo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-arrow-up me-1"></i>@transaction.Tipo
                                            </span>
                                        }
                                    </td>
                                    <td>@transaction.Descricao</td>
                                    <td class="text-end">
                                        <span class="@(transaction.Valor > 0 ? "text-success" : "text-danger") fw-bold">
                                            @(transaction.Valor > 0 ? "+" : "")@transaction.Valor.ToString("C")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-2">Nenhuma transação encontrada.</p>
                </div>
            }
        </div>
    </div>
</div>
