@model WalletDetailsViewModel
@{
    ViewData["Title"] = "Minha Carteira";
}

<div class="container mt-4">
    <h2>
        <i class="bi bi-wallet2 me-2"></i>Minha Carteira
    </h2>

    <div class="row mt-4">
        <!-- Balance Card -->
        <div class="col-md-4">
            <div class="card shadow balance-card">
                <div class="card-body text-center">
                    <div class="balance-icon">
                        <i class="bi bi-wallet2"></i>
                    </div>
                    <h5 class="card-title">Saldo Atual</h5>
                    <h2 class="balance-amount @(Model.SaldoAtual > 0 ? "text-success" : "text-muted")">
                        @Model.SaldoAtual.ToString("C")
                    </h2>
                    <a asp-action="AddFunds" class="btn btn-primary w-100 mt-3">
                        <i class="bi bi-plus-circle me-2"></i>Adicionar Fundos
                    </a>
                </div>
            </div>
        </div>

        <!-- Transactions -->
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Histórico de Transações
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Transacoes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Data</th>
                                        <th>Tipo</th>
                                        <th>Descrição</th>
                                        <th class="text-end">Valor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.Transacoes)
                                    {
                                        <tr>
                                            <td>@transaction.DataTransacao.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (transaction.Tipo == "Carregamento")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-arrow-down me-1"></i>@transaction.Tipo
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-arrow-up me-1"></i>@transaction.Tipo
                                                    </span>
                                                }
                                            </td>
                                            <td>@transaction.Descricao</td>
                                            <td class="text-end">
                                                <span class="@(transaction.Valor > 0 ? "text-success" : "text-danger") fw-bold">
                                                    @(transaction.Valor > 0 ? "+" : "")@transaction.Valor.ToString("C")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-inbox fs-1"></i>
                            <p class="mt-2">Nenhuma transação encontrada.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
